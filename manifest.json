{
  "name": "Greek Hoaxes Detector",
  "short_name" : "GHD",
  "version": "1.4",
  "manifest_version": 2,
  "default_locale": "en",
  "description": "Προειδοποιεί για ελληνικές πηγές ενημέρωσης που έχουν υπάρξει αναξιόπιστες.",
  "homepage_url": "http://ellinikahoaxes.gr",
  "permissions": [
    "*://unshorten.me/*",
    "webRequest",
    "webNavigation"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "js/utils.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [ {
     "css": [ "css/bs-detector.css" ],
     "js": [
       "js/utils.js",
       "js/lib/jquery-3.1.1.slim.min.js",
       "js/lib/mutation-summary.js",
       "js/lib/jquery.mutation-summary.js",
       "js/bs-detector.js"
     ],
     "matches": [ "*://*/*" ],
     "all_frames": true,
     "run_at": "document_end"
  } ],
  "web_accessible_resources": [
    "data/data.json"
  ],
  "page_action": {
    "default_title": "Greek Hoaxes Detector"
  }
}
